# Django Configuration
SECRET_KEY=your-very-long-secret-key-change-this-in-production-min-50-chars
DEBUG=True
DJANGO_ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1,*.gitpod.io,*.github.dev,*.codespaces.githubusercontent.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://*.gitpod.io,https://*.github.dev,https://*.codespaces.githubusercontent.com

# Azure AD Configuration (Get these from Azure Portal)
AZURE_CLIENT_ID=your-azure-client-id-from-app-registration
AZURE_CLIENT_SECRET=your-azure-client-secret-from-app-registration
AZURE_TENANT_ID=your-azure-tenant-id

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Production Database (Optional - for production deployment)
DATABASE_URL=postgresql://user:password@host:port/database

# Sentry (Optional - for error tracking)
SENTRY_DSN=your-sentry-dsn-url
